.new-header
  %h1.new-header_top{align:"center"}
    %a{href: "/", class: "new-header_logo"}
      = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1499590657', class: 'exhibit__header__image', alt: "mercari"
.main
  .main__container
    .head
      %center 新規会員登録
    .contents
      .contents__mail-adress{type: "button"}
        %i.fa.fa-envelope-o{"aria-hidden": "true"}
        = link_to registrations_path do
          %div メールアドレスで登録
      .contents__facebook
        %i.fa.fa-facebook-square{"aria-hidden": "true"}
        = link_to 'Facebookで登録'
      .contents__google
        %img{alt: "", src: "https://www.mercari.com/jp/assets/img/common/common/google.svg"}
        = link_to 'Googleで登録'

.footer
  = render 'items/exhibit@footer'