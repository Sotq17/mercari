.user_pickup-category__box
  %h3.user_pickup-category__box__title
    = link_to '〇〇さんのその他の商品', ''
  .user_pickup-category__box__items
    - @items.each do |item|
      .user_pickup-category__box__items__item
        = link_to "/items/#{item.id}", method: :get do
          .user_pickup-category__box__items__item__photo
            - item.photos.first(1).each do |photo|
              = image_tag photo.image.url
          .user_pickup-category__box__items__item__body
            .user_pickup-category__box__items__item__body__title
              = item.name
            .user_pickup-category__box__items__item__body__detail
              .user_pickup-category__box__items__item__body__detail__price
                = item.price
                円
              .user_pickup-category__box__items__item__body__detail__like
                = fa_icon("heart-o")
                %span= item.like
              .user_pickup-category__box__items__item__body__detail__tax
                (税込)
  .user_pickup-category__box__all
