= render 'items/header'
.mypage
  .mypage__main
    .mypage__main__icon
      .mypage__main__icon__number
        .card_information
          .head
            クレジット情報入力
          .contents
            .contents_inner
              = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
                .form-group
                  %label
                    カード番号
                  %span.must
                    必須
                  = text_field_tag "number", "", class: "form-group_input", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
                  %ul.card-list
                    %li
                      = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2845599746', class: "card-icon"
                      = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2845599746', class: "card-icon"
                      = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2845599746', class: "card-icon"
                      = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2845599746', class: "card-icon"
                      = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2845599746', class: "american-express"
                      = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2845599746', class: "card-icon"
                      = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2845599746', class: "card-icon"
                .form-group
                  %label
                    有効期限
                  %span.must
                    必須
                  .form-group_birthday
                    %select#exp_month.select{name: "exp_month", type: "text"}
                      %option{value: ""} --
                      %option{value: "1"}01
                      %option{value: "2"}02
                      %option{value: "3"}03
                      %option{value: "4"}04
                      %option{value: "5"}05
                      %option{value: "6"}06
                      %option{value: "7"}07
                      %option{value: "8"}08
                      %option{value: "9"}09
                      %option{value: "10"}10
                      %option{value: "11"}11
                      %option{value: "12"}12
                    %span.birth-day 月
                  .form-group_birthday
                    %select#exp_year.select{name: "exp_year", type: "text"}
                      %option{value: ""} --
                      %option{value: "2019"}19
                      %option{value: "2020"}20
                      %option{value: "2021"}21
                      %option{value: "2022"}22
                      %option{value: "2023"}23
                      %option{value: "2024"}24
                      %option{value: "2025"}25
                      %option{value: "2026"}26
                      %option{value: "2027"}27
                      %option{value: "2028"}28
                      %option{value: "2029"}29
                    %span.birth-day 年
                .form-group
                  %label
                    セキュリティコード
                  %span.must
                    必須
                  = text_field "cvc", "", class: "form-group_input", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
                  .security-code
                    .sequrity-code_text
                      %span.question
                        ?
                      %span.question-text
                        カードの裏面の番号とは？
                  #card_token.bottom-contents
                    = submit_tag('追加する', class: "complete", id: "token_submit")
  = render 'users/user-side-bar'
= render 'items/bottom-banner'
= render 'items/footer'
